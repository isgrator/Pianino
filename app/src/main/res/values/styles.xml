<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/segoescb</item>
        <item name="android:textSize">@dimen/tamanyo_letra</item>

    </style>


    <style name="AppTheme2" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/segoescb</item>
        <item name="android:textSize">@dimen/tamanyo_letra</item>
    </style>

    <!--Estilo pnotalaa la pantalla de configuraciÃ³n -->
    <style name="TemaConfiguracion" parent="@style/AppTheme2">
        <item name="android:textSize">@dimen/tamanyo_letra_config</item>
        <!--<item name="android:background">@android:color/holo_blue_light</item>-->
    </style>
    <!--Estilo pantalla piano-->
    <style name="EstiloTeclaPiano" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/tamanyo_letra_piano</item>
    </style>
    <style name="TemaPiano" parent="@style/AppTheme2">
                <item name="android:buttonStyle">@style/EstiloTeclaPiano</item>
    </style>

</resources>

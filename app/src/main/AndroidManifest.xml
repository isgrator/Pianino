<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.imgt.pianino">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">

        <!-- android:theme="@style/AppTheme"> -->
        <activity
            android:name=".Principal"
            android:screenOrientation="landscape">

            <!-- android:theme="@android:style/Theme.NoTitleBar.Fullscreen"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrimeraVez"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Configuracion"
            android:label="@string/configuracion"
            android:screenOrientation="landscape"
            android:theme="@style/TemaConfiguracion" />
        <!-- <activity android:name=".Configuracion"></activity> -->
        <activity
            android:name=".Piano"
            android:screenOrientation="landscape"
            android:theme="@style/TemaPiano" />
        <activity
            android:name=".ResultadoJuego"
            android:screenOrientation="landscape"
            android:theme="@style/TemaResultado"></activity>
    </application>

</manifest>
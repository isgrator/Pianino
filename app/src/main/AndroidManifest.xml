    package="org.imgt.pianino">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme2">
        <!--android:theme="@style/AppTheme">-->
        <activity android:name=".Principal"
            android:screenOrientation="landscape">
            <!--android:theme="@android:style/Theme.NoTitleBar.Fullscreen">-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PrimeraVez"
            android:screenOrientation="landscape"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Configuracion"
            android:theme="@style/TemaConfiguracion"
            android:screenOrientation="landscape"
            android:label="@string/configuracion"/>
        <!--<activity android:name=".Configuracion"></activity>-->
    </application>

</manifest>